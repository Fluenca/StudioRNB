<h1>Studio Index / Homepage</h1>

<% @studios.each do |studio| %>
  <div class="card-studio">
    <div class="content">
      <div class="text">
        <% if studio.photo.attached? %>
        <div class="card-image"></div> <%= cl_image_tag studio.photo.key, height: 300, width: 500, crop: :fill %>
        <% else %>
          <p>no image available</p>
        <% end %>
        <h3><%= studio.name %></h3>
        <h4><%= studio.location%></h4>
        <p><%= studio.description %></p>
      </div>
      <div class="button"><%= link_to 'Details', studio_path(studio) %></div>
    </div>
  </div>
<% end %>
