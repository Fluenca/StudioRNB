
<div class="index-container">
  <div class="index-container-headline">
  <span class="headline"><h1>Studios near you in <span class="pink">the World</span></h1></span>
  </div>

</div>
<div><%= form_tag studios_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a studio around the world!",
    id: 'search_input'
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>
</div>
  <div style="width: 100%; height: 600px;"
    data-controller="mapbox"
    data-mapbox-markers-value="<%= @markers.to_json %>"
    data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
  
<div>
  <div class="card-grid">
    <% @studios.each do |studio| %>
      <div class="card-studio">

      <div class="card-image">
        <% if studio.photo.attached? %>
              <%= cl_image_tag studio.photo.key, height: 300, width: 500, crop: :fill %>
              <% else %>
                <p>no image available</p>
              <% end %>

      </div>
          <div class="content">
            <div class="text">
              <h3><%= studio.name %></h3>
              <h4><%= studio.address%></h4>
                <div class="desc">
                  <p><%= studio.description %></p>
                  <p><%= studio.size %></p>
                </div>
              <div class="price">
                <h5><%= studio.price.to_i %> â‚¬ / Day</h5>
              </div>
          </div>
          <div class="button">
            <%= link_to 'Details', studio_path(studio) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
