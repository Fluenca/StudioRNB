<h1>Studio Index / Homepage</h1>

<% @studios.each do |studio| %>
  <div class="card">
    <% if studio.photo.attached? %>
      <%= cl_image_tag studio.photo.key, height: 150, width: 200, crop: :fill %>
    <% else %>
      <p>no image available</p>
    <% end %>
    <h3><%= studio.name %></h3>
    <h4><%= studio.location%></h4>
    <p><%= studio.description %></p>
    <%= link_to 'Check out this studio now!', studio_path(studio) %>
  </div>
<% end %>
